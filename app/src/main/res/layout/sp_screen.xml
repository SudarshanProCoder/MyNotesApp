<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201C1C"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/first_line"
            android:background="@drawable/white_line" />


        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/second_line"
            android:background="@drawable/purple_line" />

        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/third_line"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fourth_line"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fifth_line"
            android:background="@drawable/red_line" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/baloo"
                android:text="MyNotes"
                android:textColor="#fff"
                android:textSize="65sp"
                android:textStyle="italic" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/second_line2"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/first_line1"
            android:background="@drawable/purple_line" />


        <View
            android:id="@+id/third_line3"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/second_line2"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/fourth_line4"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/third_line3"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/fifth_line5"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fourth_line4"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/sixth_line6"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fifth_line5"
            android:background="@drawable/green_line" />


    </RelativeLayout>


</LinearLayout>